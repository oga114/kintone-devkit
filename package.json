{
  "name": "kintone-devkit",
  "version": "1.0.0",
  "description": "TypeScript + Vite によるkintone開発ツールキット（カスタマイズ・プラグイン・スキーマ管理）",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "kintone",
    "vite",
    "typescript",
    "customize",
    "plugin",
    "schema",
    "devkit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/kintone-devkit.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/kintone-devkit/issues"
  },
  "homepage": "https://github.com/your-username/kintone-devkit#readme",
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "build": "tsx scripts/build.ts",
    "upload": "tsx scripts/upload.ts",
    "sync": "tsx scripts/sync-existing.ts",
    "create": "tsx scripts/create-app.ts",
    "remove": "tsx scripts/remove-app.ts",
    "schema": "tsx scripts/fetch-schema.ts",
    "schema:diff": "tsx scripts/diff-schema.ts",
    "schema:deploy": "tsx scripts/deploy-schema.ts",
    "backup": "tsx scripts/backup-records.ts",
    "backup:restore": "tsx scripts/restore-records.ts",
    "create:plugin": "tsx scripts/create-plugin.ts",
    "dev:plugin": "tsx scripts/dev-plugin.ts",
    "build:plugin": "tsx scripts/build-plugin.ts",
    "pack:plugin": "tsx scripts/pack-plugin.ts",
    "upload:plugin": "tsx scripts/upload-plugin.ts",
    "typecheck": "tsc --noEmit",
    "setup:wsl": "bash scripts/setup-wsl.sh"
  },
  "devDependencies": {
    "@kintone/plugin-packer": "^9.0.0",
    "@kintone/plugin-uploader": "^10.0.0",
    "@kintone/rest-api-client": "^5.6.0",
    "@types/node": "^22.10.2",
    "chokidar": "^4.0.3",
    "dotenv": "^16.5.0",
    "terser": "^5.37.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.6"
  }
}
